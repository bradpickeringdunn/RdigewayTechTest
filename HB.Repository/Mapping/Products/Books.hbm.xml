<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping assembly="HB.Services.Models" namespace="HB.Services.Models.Books.Dto" xmlns="urn:nhibernate-mapping-2.2">
  <class name="BookDto" table="vw_Books" lazy="false" >
    <id name="Id" column="ProductId" >
      <generator class="identity" />
    </id>

    <property name="Name">
      <column name="Name" sql-type="varchar" not-null="true" />
    </property>

    <property name="Description">
      <column name="Description" sql-type="varchar" not-null="true" />
    </property>

    <property name="Price">
      <column name="Price" sql-type="decimal" not-null="true" />
    </property>

    <property name="CategoryId">
      <column name="CategoryId" sql-type="int" not-null="true" />
    </property>

    <property name="Author">
      <column name="Author" sql-type="varchar" not-null="true" />
    </property>

    <property name="ISBN">
      <column name="ISBN" sql-type="varchar" not-null="true" />
    </property>

    <property name="PageCount">
      <column name="PageCount" sql-type="int" not-null="true" />
    </property>

  </class>

</hibernate-mapping>

