<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping assembly="HB.Services.Models" namespace="HB.Services.Models.Movies.Dto" xmlns="urn:nhibernate-mapping-2.2">
  <class name="MovieDto" table="vw_Movies" lazy="false" >
    <id name="Id" column="ProductId" >
      <generator class="identity" />
    </id>

    <property name="Name">
      <column name="Name" sql-type="varchar" not-null="true" />
    </property>

    <property name="Description">
      <column name="Description" sql-type="varchar" not-null="true" />
    </property>

    <property name="Price">
      <column name="Price" sql-type="decimal" not-null="true" />
    </property>

    <property name="CategoryId">
      <column name="CategoryId" sql-type="int" not-null="true" />
    </property>

    <property name="Length">
      <column name="Length" sql-type="int" not-null="true" />
    </property>

    <property name="AgeLimit">
      <column name="AgeLimit" sql-type="varchar" not-null="true" />
    </property>

    <property name="Genre">
      <column name="Genre" sql-type="varchar" not-null="true" />
    </property>

  </class>

</hibernate-mapping>

